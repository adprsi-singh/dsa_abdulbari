//Sum of n natural number for using recursion. I am taking input from the user. 

#include<iostream>
#include<stdio.h>
using namespace std;
int sum(int n){
    if (n==0){
        return 0;
    }
    else{
        return sum(n-1)+n;
    }
}
int main(){
    int n;
    int input;
    cout<<"Enter input : ";
    cin>>input;
    
    n=sum(input);
    cout<<"Sum of n natural number is : "; 
    cout<<n;
    
}
